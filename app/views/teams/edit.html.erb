<h1>Edit a Team</h1>

<% form_for(@team) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :lead %><br />
    <%= f.text_field :lead %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :cols => 28, :rows => 4 %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @team %> |
<%= link_to 'Back', teams_path %>
